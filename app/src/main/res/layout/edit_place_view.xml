<?xml version="1.0" encoding="utf-8"?>
<com.esobol.Railway.views.EditPlaceView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="17dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/remove_button"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/minus_button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/carriage" />

    <EditText
        android:id="@+id/carriage_edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:hint="@string/carriage"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/seat" />

    <EditText
        android:id="@+id/seat_edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@android:color/transparent"
        android:hint="@string/seat"
        android:importantForAutofill="no" />

</com.esobol.Railway.views.EditPlaceView>